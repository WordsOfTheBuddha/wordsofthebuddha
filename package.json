{
	"name": "suttas-basics",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"watch-routes": "npx tsx --trace-deprecation src/utils/contentWatcher.mjs --watch",
		"predev": "node --trace-deprecation src/utils/updateTimestamps.mjs && npx tsx src/utils/generateContentCounts.ts && npx tsx src/utils/generateQualityMappings.ts && npx tsx src/utils/generateSimileMappings.ts && npx tsx src/utils/generateTopicMappings.ts && npx tsx src/utils/generateSearchIndex.ts && npx tsx src/utils/generateOfflineManifest.ts",
		"gen:qualities": "npx tsx src/utils/generateQualityMappings.ts",
		"gen:similes": "npx tsx src/utils/generateSimileMappings.ts",
		"gen:topics": "npx tsx src/utils/generateTopicMappings.ts",
		"gen:offline": "npx tsx src/utils/generateOfflineManifest.ts",
		"dev": "concurrently \"yarn run watch-routes\" \"node --trace-deprecation ./node_modules/.bin/astro dev --host\"",
		"prebuild": "npx tsx --trace-deprecation src/utils/contentWatcher.mjs && node src/utils/updateTimestamps.mjs && npx tsx src/utils/generateContentCounts.ts && npx tsx src/utils/generateQualityMappings.ts && npx tsx src/utils/generateSimileMappings.ts && npx tsx src/utils/generateTopicMappings.ts && npx tsx src/utils/generateSearchIndex.ts && npx tsx src/utils/generateOfflineManifest.ts",
		"gen:search": "npx tsx src/utils/generateSearchIndex.ts",
		"build": "node --trace-deprecation ./node_modules/.bin/astro build --silent",
		"build:pwa": "astro build --config astro.config.pwa.mjs --silent",
		"prebuild:pwa": "npm run prebuild",
		"preview:pwa": "HOST=0.0.0.0 PORT=4322 node dist/server/entry.mjs",
		"dev:pwa": "astro dev --config astro.config.pwa.mjs --host"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.4",
		"@astrojs/mdx": "4.3.4",
		"@astrojs/tailwind": "6.0.2",
		"@astrojs/vercel": "8.2.7",
		"@sc-voice/ms-dpd": "^2.53.0",
		"@vercel/analytics": "^1.4.1",
		"@vercel/speed-insights": "^1.1.0",
		"astro": "5.13.5",
		"cytoscape": "^3.33.1",
		"firebase": "^11.2.0",
		"firebase-admin": "^13.0.2",
		"fuse.js": "^7.1.0",
		"gray-matter": "^4.0.3",
		"jsdom": "^26.1.0",
		"marked": "^15.0.6",
		"playwright": "^1.53.2",
		"rangy": "^1.3.1",
		"rehype-external-links": "^3.0.0",
		"tailwindcss": "^3.4.17",
		"tippy.js": "^6.3.7",
		"typescript": "^5.7.3"
	},
	"devDependencies": {
		"@astrojs/node": "^9.4.3",
		"@tailwindcss/typography": "^0.5.16",
		"@types/js-yaml": "^4.0.9",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^22.10.7",
		"@types/rangy": "^0.0.38",
		"concurrently": "^9.1.2",
		"glob": "^11.0.1",
		"ts-node": "^10.9.2",
		"tsx": "^4.19.4"
	}
}

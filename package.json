{
	"name": "suttas-basics",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"watch-routes": "node --trace-deprecation src/utils/generateRoutes.mjs --watch",
		"predev": "node --trace-deprecation src/utils/updateTimestamps.mjs",
		"dev": "concurrently \"yarn run watch-routes\" \"node --trace-deprecation ./node_modules/.bin/astro dev --host\"",
		"prebuild": "node --trace-deprecation src/utils/generateRoutes.mjs && node src/utils/updateTimestamps.mjs",
		"build": "node --trace-deprecation ./node_modules/.bin/astro build"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.4",
		"@astrojs/mdx": "^4.0.8",
		"@astrojs/tailwind": "^6.0.0",
		"@astrojs/vercel": "^8.0.7",
		"@vercel/analytics": "^1.4.1",
		"@vercel/speed-insights": "^1.1.0",
		"astro": "^5.3.0",
		"firebase": "^11.2.0",
		"firebase-admin": "^13.0.2",
		"fuse.js": "^7.1.0",
		"jsdom": "^26.0.0",
		"marked": "^15.0.6",
		"rangy": "^1.3.1",
		"rehype-external-links": "^3.0.0",
		"tailwindcss": "^3.4.17",
		"tippy.js": "^6.3.7",
		"typescript": "^5.7.3"
	},
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.16",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^22.10.7",
		"@types/rangy": "^0.0.38",
		"concurrently": "^9.1.2"
	}
}
